{
  "name": "aeroflow",
  "version": "0.1.0",
  "description": "Truly lazily computed reactive data flows with rich set of pure functional operators and async support.",
  "keywords": "ES6, fluent, async, reactive, LINQ",
  "homepage": "https://bitbucket.org/vladen/aeroflow",
  "author": "Denis Vlassenko <denis_vlassenko@epam.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/vladen/aeroflow.git"
  },
  "main": "index.js",
  "scripts": {
    "all": "npm run build && npm run lint && npm run test",
    "build": "npm run compile && npm run minify",
    "compile": "npm run compile-library && npm run compile-library-es6 && npm run compile-tests && npm run compile-tests-es6",
    "compile-library": "node_modules/.bin/babel src/aeroflow.js --out-file lib/aeroflow.js --presets es2015 --plugins transform-es2015-modules-umd",
    "compile-library-es6": "node_modules/.bin/babel src/aeroflow.js --out-file lib/aeroflow.es6.js --plugins transform-es2015-modules-umd",
    "compile-tests": "node_modules/.bin/babel src/tests.js --out-file lib/tests.js --presets es2015",
    "compile-tests-es6": "node_modules/.bin/babel src/tests.js --out-file lib/tests.es6.js",
    "lint": "npm run lint-library && npm run lint-tests",
    "lint-library": "node_modules/.bin/eslint src/aeroflow.js",
    "lint-tests": "node_modules/.bin/eslint src/tests.js --global aeroflow,assert,describe,it",
    "minify": "node_modules/.bin/uglifyjs lib/aeroflow.js -o lib/aeroflow.min.js -c -m",
    "test": "node_modules/.bin/mocha src/tests.js -c --harmony --prof -r chai -r core-js"
  },
  "devDependencies": {
    "babel-cli": "^6.1.18",
    "babel-plugin-transform-es2015-modules-umd": "^6.1.18",
    "babel-preset-es2015": "^6.1.18",
    "chai": "^3.4.1",
    "core-js": "^1.2.6",
    "eslint": "^1.9.0",
    "mocha": "^2.3.3",
    "uglify-js": "^2.6.0"
  }
}
