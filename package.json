{
  "name": "aeroflow",
  "version": "0.1.0",
  "description": "Truly lazily computed reactive data flows with rich set of pure functional operators and async support.",
  "keywords": "ES6, fluent, async, reactive, LINQ",
  "homepage": "https://bitbucket.org/vladen/aeroflow",
  "author": "Denis Vlassenko <denis_vlassenko@epam.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/vladen/aeroflow.git"
  },
  "main": "index.js",
  "scripts": {
    "all": "npm run build && npm run lint-flow && npm run lint-test && npm run test-flow",
    "build": "npm run compile-flow && npm run compile-test && npm run minify",
    "compile-flow": "node_modules/.bin/babel src/aeroflow.es6 --out-file lib/aeroflow.js --presets es2015 --plugins add-module-exports,transform-es2015-modules-umd",
    "compile-test": "node_modules/.bin/babel src/aeroflow.test.es6 --out-file lib/aeroflow.test.js --presets es2015",
    "lint": "npm run lint-flow && npm run lint-test",
    "lint-flow": "node_modules/.bin/eslint src/aeroflow.es6",
    "lint-test": "node_modules/.bin/eslint src/aeroflow.test.es6 --global aeroflow,assert,describe,it",
    "minify": "node_modules/.bin/uglifyjs lib/aeroflow.js -o lib/aeroflow.min.js -c -m",
    "test": "npm run compile-flow && npm run compile-test && npm run test-flow",
    "test-flow": "node_modules/.bin/mocha lib/aeroflow.test.js -c --harmony --prof -r chai -r core-js -r lib/aeroflow.js"
  },
  "devDependencies": {
    "babel-cli": "^6.1.18",
    "babel-plugin-add-module-exports": "^0.1.1",
    "babel-plugin-transform-es2015-modules-umd": "^6.1.18",
    "babel-preset-es2015": "^6.1.18",
    "chai": "^3.4.1",
    "core-js": "^1.2.6",
    "eslint": "^1.9.0",
    "mocha": "^2.3.3",
    "uglify-js": "^2.6.0"
  }
}
